@{
    ViewData["Title"] = "Receipt";
}


<!-- Receipt Section -->
<section id="receiptsection">
    <div id="backbuttondiv">
        <input type="button" id="fpbackbutton" value="BACK" onclick="location.href='/Home/'" class="getstarted" />
    </div>

        <div id="receiptform">

            <div id="receipttitle">
                <div id="receipttitle1">
                    <h2 id="receiptheading"> RECEIPT </h2>
                </div>
            </div>


            <div id="receiptformcontent">
                <div id="receiptinputfields">
                    <table>
                        <tr>
                            <td><h3 id="prooftitle">Proof of Payment: </h3></td>
                            <td><input type="file" id="file" accept=".png,.jpg,.jpeg" placeholder=""></td>
                        </tr>
                    </table>

                    <table>
                    <tr id="receipttr">
                        <td id="tdrname">Sample File Name</td>
                        <td id="receipttd">
                            <form method="delete" asp-action="" asp-controller="">
                                <button type="submit" id="ReceiptIcon" data-id="">
                                    <i class="fa fa-trash-o"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    </table>

                    <table>
                        <tr>
                            <td><h3 id="referencetitle">Reference Number: </h3></td>
                            <td><input type="text" id="refanswerinput" placeholder="Please Provide Reference Numer."></td>
                        </tr>
                    </table>
                </div>
            </div>
            <div id="receiptbuttonscontainer">
                <input type="button" id="cancelreceiptbutton" value="CANCEL">
                <input type="submit" id="submitreceiptbutton" value="SUBMIT">
            </div>
        </div>
</section>