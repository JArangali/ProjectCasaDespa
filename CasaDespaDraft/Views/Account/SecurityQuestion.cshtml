@{
    ViewData["Title"] = "Forgot Password || Security Question";
}
@using CasaDespaDraft.ViewModels
@using CasaDespaDraft.Data;
@model SecurityQuestionViewModel

<section id="sq">
    <div id="backbuttondiv">
        <button id="fpbackbutton"> <a id="fpabackbutton" asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="getstarted"> <i class="material-icons">chevron_left</i> </a> </button>
    </div>
    <form asp-action="SecurityQuestion" asp-controller="Account" method="post">
        <div id="sqform">

            <div id="sqtitle">
                <div id="sqtitle1">
                    <img id="sqlogoimg" src="~/img/sqlogo.png" alt="sqlogo"><h2 id="sqheading"> SECURITY QUESTION </h2>
                </div>
            </div>


            <div id="sqformcontent">
                @if (ViewData.ModelState["answer"] != null)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationMessage("answer")
                    </div>
                }
                <div id="sqinputfields">

                    <input asp-for="answer" type="hidden" value="@Model.answer" />
                    <input asp-for="Email" type="hidden" value="@Model.Email" />
                    <input asp-for="question" type="hidden" value="@Model.question" />
                    <h4 id="sqtext">-- @Model.question --</h4>
                    <input asp-for="fanswer" type="text" id="sqanswerinput" placeholder="Please Provide Answer">
                    <span asp-validation-for="fanswer" class="text-danger"></span>
                </div>
            </div>
            <div id="sqbuttonscontainer">
                <button type="submit" id="nextbutton">NEXT</button>
            </div>
        </div>
    </form>
</section>