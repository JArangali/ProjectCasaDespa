@{
    ViewData["Title"] = "Reset Password";
}

@using CasaDespaDraft.ViewModels
@using CasaDespaDraft.Data;
@model ResetPasswordViewModel

<!-- Reset Password Section -->
<section id="rp">
    <div id="backbuttondiv">
        <button id="fpbackbutton"> <a id="fpabackbutton" asp-area="" asp-controller="Account" asp-action="ForgotPassword" class="getstarted"> <i class="material-icons">chevron_left</i> </a> </button>
    </div>
    <form asp-action="ResetPassword" asp-controller="Account" method="post">
        <div id="rpform">
            <div id="rptitle">
                <div id="rptitle1">
                    <h2 id="rpheading"> RESET PASSWORD </h2>
                </div>
            </div>
            <div id="rpformcontent">
                <div id="rpinputfields">
                    <span class="glyphicon glyphicon-lock" id="lockglyph"></span>
                    <input asp-for="NewPassword" type="password" id="rpanswerinput" placeholder="Enter new password">
                </div>
                <div id="rpinputfields1">
                    <i class="glyphicon glyphicon-ok-sign" id="okglyph"></i>
                    <input asp-for="ConfirmNewPassword" type="password" id="rpanswerinput" placeholder="Confirm new password">
                </div>
            </div>
            <div id="rpbuttonscontainer">
                <button type="submit" id="rpnextbutton"><a id="rpnext" asp-area="" asp-controller="Account" asp-action=""> NEXT </a> </button>
            </div>
        </div>
    </form>
</section>
